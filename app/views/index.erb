<div class = "header">
<h1>Anagram Generator</h1>
</div>

<% if @error.present? %>
	<p class= 'error'><%= "#{@error}" %></p>
<% end %>

<div class="form">
<form action="/" method="post" class="form">
	<div class="enter"
	<label for="word">Enter a word</label>
	</div>
	
	<input type="text" class ="textbox" tabindex="0" name="word">
	
	<input type="submit" class="btn" tabindex="0" value="Show me my anagrams!">
</form>
</div>