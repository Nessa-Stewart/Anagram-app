<% if !@errors.blank? %>
  <p class="errors">
    <%= "#{@errors}" %>
  </p>
<% end %>

<form action="<%= words_form_action(@word) %>" method="post" id="<%= 
words_form_id(@word) %>" class="<%=words_form_class(@word) %>">

	<input type="hidden" name="_method" value="<%= words_form_method(@word) %>" />
	
  <div class="word">	
	<label for="word">Enter your new word</label>
	<input type="text" name="text"  />
  </div>

  
  
  <div class="button">
	<input type="submit" />
  </div>
</form>